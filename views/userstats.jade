include head.jade
link(rel="stylesheet", href="css/flags.css")
script.
    var ReportAnalytics = false;
body
    include header.jade
    div.container-fluid
      div.section
          div.row
              div.col.l4.offset-l4
                  h4 User stats
                  div(class="table-responsive")
                    table(class="table" id="userstats")
                      thead
                          tr.trhideclass
                              th User IP address
                              th Stats
                          tbody
                              each user in users
                                tr.trhideclass
                                  td
                                    = user._id
                                    br
                                    em.text-muted.small
                                        = user.location
                                  td
                                    ol
                                      each stat in user.stats
                                        li
                                            =stat.action
                                            =" "
                                            if(stat.content_id != "")
                                                a(href="http://wompwomp.co/v/"+stat.content_id)
                                                     =stat.content_id
    include footer.jade
