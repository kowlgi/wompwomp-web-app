extends layout
block content
    .container-fluid
        div.section
            div.row
                div.col.l4.offset-l4
                    if(!user)
                        h5 Welcome to the dashboard
                        h6
                            |If you're a member,
                            =" "
                            a(href='/signin') sign in
                            |.
                            =" "
                            |If you're not,
                            =" "
                            a(href='/signup') sign up
                            |. It's free.
                    else
                        h5
                            |Hi
                            =" "
                            =user.username
                            |, you're signed in
                        if(user)
                            if(user.role == "admin")
                            p
                              | You have admin privileges. You can: 
                        
                        if(user)
                            if(user.role == "admin")
                                li
                                    a(href="/buffer") View content that has been buffered
                                li
                                    a(href="/dailystats") View daily user stats
                            li
                                a(href="/post") Post content 
