doctype html
head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title wompwomp
    meta(name="description", content=metaDescription)
    meta(property="og:image", content="http://wompwomp.co/images/web_hi_res_512.png")
    link(href="http://fonts.googleapis.com/icon?family=Material+Icons", rel="stylesheet")
    link(type="text/css", rel="stylesheet",
        href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.2/css/materialize.min.css",
        media="screen,projection")
    link(rel="stylesheet", href="css/agni.css")
    link(rel="stylesheet", href="css/flags.css")
body
    nav
        div.nav-wrapper.theme-background
            a(href="/dashboard",class="brand-logo")
                image(src="images/trombone_white.svg", height="36px", width="auto")
                |wompwomp
                a(href="#", data-activates="mobile-demo" class="button-collapse")
                    i.material-icons menu
                ul(id="nav-mobile", class="right hide-on-med-and-down")
                    li
                        a(href="/") Home
                    li
                        a(href="/dashboard ") Dashboard
                    if(user)
                        if(user.role == "admin")
                            li
                                a(href="/buffer") Buffer
                            li
                                a(href="/review") Review
                            li
                                a(href="/dailystats") Usage Stats
                            li
                                a(href="/itemstats") Item Stats
                        li
                            a(href="/post") Post
                        li
                            a(href="/signout") Sign Out
                ul(class="side-nav", id="mobile-demo")
                    li
                        a(href="/") Home
                    li
                        a(href="/dashboard ") Dashboard
                    if(user)
                        if(user.role == "admin")
                            li
                                a(href="/buffer") Buffer
                            li
                                a(href="/review") Review
                            li
                                a(href="/dailystats") Usage Stats
                            li
                                a(href="/itemstats") Item Stats
                        li
                            a(href="/post") Post
                        li
                            a(href="/signout") Sign Out
    .container-fluid
        div.section
            div.row.center
                div.col.l4.offset-l4.flow-text
                    if messages.error
                        .alert.alert-danger
                            div.red-text
                                = messages.error
                    if messages.info
                        .alert.alert-info
                            div.orange-text
                                = messages.info
                    if messages.success
                        .alert.alert-success
                            div.green-text
                                = messages.success
    block content
    div.center.tiny-text(id="footer")
        |a hatching amazing labs creation &copy; 2015&nbsp;
        |&middot;&nbsp;
        a(href="mailto:wompwompapp@gmail.com") Contact&nbsp;
        |&middot;&nbsp;
        |Privacy
script(src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js")
script(src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.2/js/materialize.min.js")
script(src="js/agnidashboard.js")
