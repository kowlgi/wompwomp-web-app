doctype html
head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title wompwomp
    meta(name="description", content=metaDescription)
    meta(property="og:image", content="http://wompwomp.co/images/web_hi_res_512.png")
    link(href="http://fonts.googleapis.com/icon?family=Material+Icons", rel="stylesheet")
    link(type="text/css", rel="stylesheet",
        href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.2/css/materialize.min.css",
        media="screen,projection")
    link(rel="stylesheet", href="css/agni.css")
    link(rel="stylesheet", href="css/flags.css")
body
    nav
        div.nav-wrapper.theme-background
            a(href="/dashboard",class="brand-logo center")
                image(src="images/trombone_white.svg", height="36px", width="auto")
                |wompwomp
                a(href="#", data-activates="mobile-demo" class="button-collapse")
                    i.material-icons menu
                ul(id="nav-mobile", class="right hide-on-med-and-down")
                    li
                        a(href="/") Home
                    li
                        a(href="/dashboard ") Dashboard
                    if(user)
                        if(user.role == "admin")
                            li
                                a(href="/buffer") Buffer
                            li
                                a(href="/dailystats") Stats
                        li
                            a(href="/post") Post
                        li
                            a(href="/signout") Sign Out
                ul(class="side-nav", id="mobile-demo")
                    li
                        a(href="/") Home
                    li
                        a(href="/dashboard ") Dashboard
                    if(user)
                        if(user.role == "admin")
                            li
                                a(href="/buffer") Buffer
                            li
                                a(href="/dailystats") Stats
                        li
                            a(href="/post") Post
                        li
                            a(href="/signout") Sign Out
    block content
script(src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js")
script(src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.2/js/materialize.min.js")
script(src="js/agnidashboard.js")
