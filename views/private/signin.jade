extends layout
block content
    .container-fluid
        div.section
            div.row
                div.col.l4.offset-l4
                    h1 Sign In
                    p.lead Welcome back, amigo!
                    br
                    form(role='form', action="/signin",method="post", style='max-width: 300px;')
                      .form-group
                          input.form-control(type='email', name="email", placeholder="Enter your email", required)
                      .form-group
                        input.form-control(type='password', name="password", placeholder='Password', required)
                      button.btn.btn-default(type='submit') Sign In
                    br
                    |Not a member? No worries.
                    =" "
                    a(href='/signup') Sign up here
