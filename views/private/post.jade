extends layout
block content
    .container-fluid
        div.section
            div.row
                div.col.l4.offset-l4
                    h3 Post Something Funny
                    form(role='form', action="/post", method="post", style='max-width: 300px;', enctype="multipart/form-data")
                        div.row
                            .form-group
                                input(type='file', name="imagefile", id="imagefile", required)
                        div.row
                            .form-group
                                textarea.form-control(id="caption", name="caption", placeholder='Write a funny caption in 140 characters or less', maxlength="140", rows="8")
                        button.btn.btn-default(type='submit') Submit
                        br
                        div.image_preview
                            h3.grey-text Preview
                            em.grey-text Image will be modified to optimize mobile viewing. Remove all watermarks from the image
                            div(class="card hoverable")
                              div.card-image
                                  img.center(id="blahimg", src="", alt="Choose an image file to preview")
                              div.card-content
                                  p(id="blahtxt")
