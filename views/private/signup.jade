extends layout

block content
    .container-fluid
        div.section
            div.row
                div.col.l4.offset-l4
                    h1 Sign Up
                    p.lead It's been free since the ice age
                    br
                    if username
                        - usernameplaceholder = username
                    else
                        - usernameplaceholder = ""
                    if email
                        - emailplaceholder = email
                    else
                        - emailplaceholder = ""
                    form(role='form', action="/signup",method="post", style='max-width: 300px;')
                        .form-group
                            input.form-control(type='text', name="username", placeholder="Your username", value=usernameplaceholder, required)
                        .form-group
                            input.form-control(type='email', name="email", placeholder="Your email", value=emailplaceholder, required)
                        .form-group
                            input.form-control(type='password', name="password", placeholder='Password', required)
                        button.btn.btn-default(type='submit') Sign Up
                    br
                    |Already a member?
                    =" "
                    a(href='/signin') Login here
