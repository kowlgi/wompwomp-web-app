div.container-fluid.main
  div(class="section")
  each item in items
      div(class="row")
        div(class="col l4 offset-l4")
          div(class="card hoverable")
            a(href="/v/"+ item.id, class="card-image")
              img(src="#{item.imageuri}")
            div(class="card-content")
              p
                = item.text
              p
                em.text-muted.small
                  = moment(item.created_on).fromNow()
                em.text-muted.small
                | &nbsp;
    - itemcount++
