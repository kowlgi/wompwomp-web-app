div(id="subscribe_placeholder")
div(id="subscribe")
    div.theme-background
        div.right
            i.material-icons.theme-background.theme-text(id="pinnedfooterclosebutton") close
        div.section
            div.container-fluid
                div.theme-text.center
                    |The Best of WompWomp beamed to your inbox &nbsp;
                    button(class="btn modal-trigger theme-dark",
                        data-target="subscribemodal") Subscribe
        div.bottom.center.tiny-text.theme-text
            |&copy; 2015 Hatching Amazing Labs&nbsp;&nbsp;
div.theme-background(id="subscribemodal", class="modal")
    div.modal-header
        div.right
            i.material-icons.theme-background.modal-close.theme-text close
        div.center.theme-text
                b Sign up
    div.modal-content
        div.row.center.theme-text
            | Get an email once a week with the best
            | images from WompWomp
        form.subscribeform(role="form", method="post", action="/subscribe")
            div.row.center
                div.input-field.col.s10.offset-s1
                    input(id="emailfield", type="email", class="validate",
                        name="email", autocomplete="on", maxlength="100")
                    label(for="email") Your Email
                    button(type="submit", id="subscribebutton", class="btn theme-dark")
                            |Subscribe
script(src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js")
script(src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.2/js/materialize.min.js")
script(src="js/agni.js")
